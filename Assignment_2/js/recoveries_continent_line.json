{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": {
    "text": "Recoveries per Continent over Time",
    "fontSize": 16,
    "dy": -15
  },
   "background":"Honeydew",
  "width": 375,
  "height": 300,
  "data": {"url": "https://raw.githubusercontent.com/theshahmirali/FIT3179/main/Assignment_2/data/time_series_recoveries_wide_cleaned.csv"},
  "transform": [ {"filter": "datum.Recovered > 0"}],
  "layer":[ {
  "mark": {
    "type": "line",
    "point": true
  },
  "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["Continent"],
          "bind": "legend"
        }
      },
  
  "encoding": {
    "x": {"timeUnit": "month", "field": "Date", "title": "Month"},
    "y": {"aggregate":"mean", "field": "Recovered", "title": "Recoveries" , "type": "quantitative", "axis": {"tickCount": 6},
      "scale": {"type": "log", "domain": [1, 1000000]}
      },
    "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#e41a1c",
              "#377eb8",
              "#4daf4a",
              "#984ea3",
              "#ff7f00",
              "#a65628"
            ]
          }
        },
    "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.8},
          "value": 0.1
    },
    "tooltip":[
      {"field": "Continent", "type": "nominal"}, 
      {"field": "Recovered", "type": "quantitative", "format": ",.2f", "aggregate": "mean"}]
  } 
  },

  {
          "mark": {
            "type": "text",
            "text": ["Africa and Oceania ", " had equal recoveries"],
            "size": 12,
            "width": 50,
            "fontWeight": "normal",
            "font": "arial"
          },
          "encoding": {
            "color": {"value": "black"},
            "x": {"value":250},
            "y": {"value": 190}
          }
        }, 
        {
          "data": {"values": [{}]},
          "mark": {"type": "rule", "color": "black", "size": 1},
          "encoding": {
            "x": {
              "value": 210,
              "type": "quantitative",
              "scale": {"domain": [0, 100]}
            },
            "y": {
              "value": 180,
              "type": "quantitative",
              "scale": {"domain": [0, 100]}
            },
            "x2": {"value": 180},
            "y2": {"value": 160}
          }
        }
  
  
  ]
}
