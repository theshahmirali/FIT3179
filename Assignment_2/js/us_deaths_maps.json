{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "COVID-19 Deaths in USA",
  "width": 500,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/theshahmirali/FIT3179/main/Assignment_2/data/covid_19_deaths_US%20_cleaned.csv"
  },
  "transform": [{"calculate": "datum.Deaths/datum.Population * 10000", "as": "Per 10,000 population"}],
  "projection": {
    "type": "albersUsa"
  },
  "mark": "circle", 
  "encoding": {
    "longitude": {
      "field": "longitude",
      "type": "quantitative"
    },
    "latitude": {
      "field": "latitude",
      "type": "quantitative"
    },
    "color": {
      "field": "Per 10,000 population",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [5, 15, 25],
        "range": ["#fee5d9", "#fcae91", "#fb6a4a", "#cb181d", "#08519c"]
      }},

    "tooltip":[
      {"field": "County", "type": "nominal"}, 
      {"field": "Per 10,000 population", "type": "quantitative", "format": ".2f"}]
    
    
  }
   
}
